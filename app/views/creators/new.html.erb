
<% if flash[:creator_errors] %>
    <ul>
        <% flash[:creator_errors].each do |error| %>
        <li><%= error %></li>
        <% end%>
    </ul>
<% end%>
    
<div class="form-container">
    <h1> Create Your Profile </h1>

    <%= form_for @creator do |f| %>
    <div class="form-input">
        <%= f.label :first_name %>
        <%= f.text_field :first_name %>
    </div>

    <div class="form-input">
        <%= f.label :last_name %>
        <%= f.text_field :last_name %>
    </div>

    <div class="form-input">
        <%= f.label :email %>
        <%= f.text_field :email %>
    </div>

    <div class="form-input">
        <%= f.label :password %>
        <%= f.text_field :password %>
    </div>
    
  <%= f.submit %>
<% end %>

</div>