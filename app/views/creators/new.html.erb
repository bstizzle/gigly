<%= render "shared/errors"%>

<div class="container rounded bg-dark text-white">
    <h1> Create Your Profile </h1>

    <%= form_for @creator, :html => {:class => "form-horizontal center"} do |f| %>
    <div class="form_group">
        <%= f.label :first_name %>
        <%= f.text_field :first_name, class: "form-control form-control-lg" %>
    </div>

    <div class="form_group">
        <%= f.label :last_name, class: "col-md-2 control-label" %>
        <%= f.text_field :last_name, class: "form-control form-control-lg"%>
    </div>

    <div class="form_group">
        <%= f.label :email, class: "col-md-2 control-label"%>
        <%= f.text_field :email, class: "form-control form-control-lg" %>
    </div>

    <div class="form_group">
        <%= f.label :password, class: "col-md-2 control-label" %>
        <%= f.text_field :password, class: "form-control form-control-lg" %>
    </div>
    <br>
    <%= f.submit "Sign Up", class: "btn btn-default btn-primary" %>
    <% end %>
    <br>
</div>