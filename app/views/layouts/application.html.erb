<!DOCTYPE html>
<html>
  <head>
    <title>Gigly.io</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    
    
    <div>
      <h1>GIGLYðŸ¤£</h1>

      <ul> 
        <li><%= link_to "Browse Artists", artists_path, method: :get %></li>
        <li><%= link_to "Browse Projects", projects_path, method: :get %></li>
        <li><%= link_to "Browse Creators", creators_path, method: :get %></li>
        <% if @current_creator %>
          <li><%= link_to "My Profile", creator_path(cookies[:creator_id]), method: :get  %></li>
          <li><%= link_to "Logout", logout_path, method: :get  %></li>
          <li>Welcome <%= @current_creator.first_name %></li>
        <% else %>
          <li><%= link_to "Sign Up", new_creator_path %></li>
          <li><%= link_to "Login", new_creator_login_path %></li>
        <% end %>
      </ul>
    </div>

    <div>
      <%= yield %>
    </div>
  </body>
</html>
