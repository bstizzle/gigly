<% if flash[:errors]%>
    <%= flash[:errors]%>
<% end %>

<div class="container rounded bg-dark text-white">
    <h1> Sign In </h1>

    <%= form_for :session, url: creator_login_path, :html => {:class => "form-horizontal center"} do |f| %>
    <div class="form_group">
        <%= f.label :email%>
        <%= f.text_field :email, class: "form-control" %>
    </div>

    <div class="form_group">
        <%= f.label :password%>
        <%= f.password_field :password, class: "form-control"%>
    </div>
    <br>
    <%= f.submit "Log In", class: "btn btn-default btn-primary" %>
    <% end %>
    <br>
</div>