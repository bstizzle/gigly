<% if flash[:artist_errors] %>
    <ul>
        <% flash[:artist_errors].each do |error| %>
        <li><%= error %></li>
        <% end%>
    </ul>
<% end%>

<div class="form-container">
  <h1>Create an Artist Account</h1>

  <%= form_for @artist do |f| %>
    <div class="form-input">
      <%= f.label :first_name  %>
      <%= f.text_field :first_name  %>
    </div>

    <div class="form-input">
      <%= f.label :last_name  %>
      <%= f.text_field :last_name  %>
    </div>

    <div class="form-input">
      <%= f.label :email  %>
      <%= f.text_field :email  %>
    </div>

    <div class="form-input">
      <%= f.label :password  %>
      <%= f.text_field :password  %>
    </div>

    <%= f.submit %>
  <% end %>
</div>