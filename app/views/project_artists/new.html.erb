<% if @current_creator.projects.empty? == false  %>
    <%= form_for @project_artist do |f| %>
        <label>Select project to add artist to:</label>
        <%= f.collection_select(:project_id, @current_creator.projects, :id, :name) %>

        <%= f.submit "Send Hire Request" %>
    <% end %>
<% else %>
<h3>You currently have no projects! Create a project to hire an artist.</h3>
<p><%= button_to "Create a project", new_project_path, method: :get %> <p>
<% end %>