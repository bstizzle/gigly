<div class="form-container">
    <%= form_for @project_specialty do |f| %>
        <div class="form-input">
            <label>Select Your Project</label>
            <%= f.collection_select(:project_id, Project.all, :id, :email) %>
        </div>
        <div class="form-input">
            <label>Select Specialties</label>
            <%= f.collection_select(:specialty_id, Specialty.all, :id, :name, {}, {:multiple => true}) %>
        </div>

        <%= f.submit %>
    <% end %>
</div>